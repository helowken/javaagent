#!/bin/bash

base_dir=`pwd`/$(dirname "$0")/..
version=1.0
agent_launcher_jar=$base_dir/agent-launcher-$version.jar
server_launcher_jar=$base_dir/server-launcher-$version.jar
tools_jar=$JAVA_HOME/lib/tools.jar
conf_file=$base_dir/conf/server.conf
jvm_display_name=$1
classpath=$agent_launcher_jar:$tools_jar

$JAVA_HOME/bin/java -cp $classpath \
	agent.dynamic.attach.AgentLoader \
	$jvm_display_name \
	$server_launcher_jar \
	$conf_file
