#!/bin/bash

export type=server
source $(dirname $0)/../../common/bin/env

agent_launcher_jar=$launcher_dir/agent-launcher-$version.jar
server_launcher_jar=$launcher_dir/server-launcher-$version.jar
tools_jar=$JAVA_HOME/lib/tools.jar

if [ ! -f $tools_jar ]
then
    echo $tools_jar not exists.
    exit 1
fi

jvm_display_name=$1
classpath=$agent_launcher_jar:$tools_jar

$JAVA_HOME/bin/java -cp $classpath \
	agent.dynamic.attach.AgentLoader \
	$jvm_display_name \
	$server_launcher_jar=$conf_file
