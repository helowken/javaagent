#!/bin/bash

version=1.0
base_dir=`pwd`/$(dirname "$0")/..
common_lib_dir=$base_dir/../common-lib
server_launcher_jar=$base_dir/server-launcher-$version.jar
server_lib_dir=$base_dir/lib
tools_jar=$JAVA_HOME/lib/tools.jar
classpath=$common_lib_dir/*:$server_lib_dir/*:$server_launcher_jar:$tools_jar
dest_dir=$1
java_file=$2

$JAVA_HOME/bin/javac -d $dest_dir -cp $classpath $java_file
