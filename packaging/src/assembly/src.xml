<assembly xmlns="http://maven.apache.org/ASSEMBLY/2.0.0"
          xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
          xsi:schemaLocation="http://maven.apache.org/ASSEMBLY/2.0.0 http://maven.apache.org/xsd/assembly-2.0.0.xsd">
    <id>javaagentPackage</id>
    <formats>
        <format>tar</format>
    </formats>
    <includeBaseDirectory>false</includeBaseDirectory>
    <dependencySets>
        <dependencySet>
            <useStrictFiltering>true</useStrictFiltering>
            <outputDirectory>common/lib/base</outputDirectory>
            <includes>
                <include>javaagent:base</include>
            </includes>
        </dependencySet>
        <dependencySet>
            <useStrictFiltering>true</useStrictFiltering>
            <outputDirectory>common/lib/core</outputDirectory>
            <includes>
                <include>javaagent:common</include>
                <include>javaagent:dependent-lib</include>
            </includes>
        </dependencySet>
        <dependencySet>
            <useStrictFiltering>true</useStrictFiltering>
            <outputDirectory>common/lib/delegate</outputDirectory>
            <includes>
                <include>javaagent:delegate-lib</include>
            </includes>
        </dependencySet>
        <dependencySet>
            <useStrictFiltering>true</useStrictFiltering>
            <outputDirectory>server/lib/core</outputDirectory>
            <includes>
                <include>javaagent:server</include>
                <include>javaagent:native</include>
            </includes>
        </dependencySet>
        <dependencySet>
            <useStrictFiltering>true</useStrictFiltering>
            <outputDirectory>server/lib/plugin</outputDirectory>
            <includes>
                <include>javaagent:jetty-runner-hook</include>
                <include>javaagent:tomcat-hook</include>
                <include>javaagent:builtin-transformers</include>
                <include>javaagent:spring-aop</include>
            </includes>
        </dependencySet>
        <dependencySet>
            <useStrictFiltering>true</useStrictFiltering>
            <outputDirectory>server/lib/launcher</outputDirectory>
            <includes>
                <include>javaagent:agent-launcher</include>
                <include>javaagent:instrument-launcher</include>
            </includes>
        </dependencySet>
        <dependencySet>
            <useStrictFiltering>true</useStrictFiltering>
            <outputDirectory>server/lib/agent</outputDirectory>
            <includes>
                <include>javaagent:server-launcher</include>
            </includes>
        </dependencySet>
        <dependencySet>
            <useStrictFiltering>true</useStrictFiltering>
            <outputDirectory>client/lib/core</outputDirectory>
            <includes>
                <include>javaagent:client</include>
            </includes>
        </dependencySet>
        <dependencySet>
            <useStrictFiltering>true</useStrictFiltering>
            <outputDirectory>client/lib/launcher</outputDirectory>
            <includes>
                <include>javaagent:basic-launcher</include>
                <include>javaagent:client-launcher</include>
            </includes>
        </dependencySet>
    </dependencySets>
    <fileSets>
        <fileSet>
            <outputDirectory/>
            <directory>${project.basedir}/target/javaagent</directory>
            <includes>
                <include>**</include>
            </includes>
            <excludes>
                <exclude>**/bin/*</exclude>
                <exclude>**/tools/*</exclude>
            </excludes>
        </fileSet>
        <fileSet>
            <outputDirectory/>
            <directory>${project.basedir}/target/javaagent</directory>
            <fileMode>755</fileMode>
            <includes>
                <include>**/bin/*</include>
                <include>**/tools/*</include>
            </includes>
        </fileSet>
    </fileSets>
</assembly>