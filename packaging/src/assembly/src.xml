<assembly xmlns="http://maven.apache.org/ASSEMBLY/2.0.0"
          xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
          xsi:schemaLocation="http://maven.apache.org/ASSEMBLY/2.0.0 http://maven.apache.org/xsd/assembly-2.0.0.xsd">
    <id>javaagentPackage</id>
    <formats>
        <format>tar</format>
    </formats>
    <includeBaseDirectory>false</includeBaseDirectory>
    <dependencySets>
        <dependencySet>
            <useStrictFiltering>true</useStrictFiltering>
            <outputDirectory>common-lib</outputDirectory>
            <includes>
                <include>javaagent:common</include>
                <include>javaagent:dependent-lib</include>
            </includes>
        </dependencySet>
        <dependencySet>
            <useStrictFiltering>true</useStrictFiltering>
            <outputDirectory>server/lib</outputDirectory>
            <includes>
                <include>javaagent:server</include>
            </includes>
        </dependencySet>
        <dependencySet>
            <useStrictFiltering>true</useStrictFiltering>
            <outputDirectory>server</outputDirectory>
            <includes>
                <include>javaagent:server-launcher</include>
            </includes>
        </dependencySet>
        <dependencySet>
            <useStrictFiltering>true</useStrictFiltering>
            <outputDirectory>server/native</outputDirectory>
            <includes>
                <include>javaagent:native</include>
            </includes>
        </dependencySet>
        <dependencySet>
            <useStrictFiltering>true</useStrictFiltering>
            <outputDirectory>client/lib</outputDirectory>
            <includes>
                <include>javaagent:client</include>
            </includes>
        </dependencySet>
        <dependencySet>
            <useStrictFiltering>true</useStrictFiltering>
            <outputDirectory>client</outputDirectory>
            <includes>
                <include>javaagent:client-launcher</include>
            </includes>
        </dependencySet>
    </dependencySets>
    <fileSets>
        <fileSet>
            <outputDirectory>/</outputDirectory>
            <directory>${project.basedir}/target/javaagent</directory>
            <includes>
                <include>**</include>
            </includes>
        </fileSet>
    </fileSets>
</assembly>