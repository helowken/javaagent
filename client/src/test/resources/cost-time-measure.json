[
  {
    "contextPath": "/test",
    "excludePackages": [
      "org\\..*"
    ],
    "transformConfigs": [
      {
        "desc": "Used to measure time cost.",
        "transformers": [
          {
            "ref": "@costTimeMeasure",
            "config": {
              "log": {
                "autoFlush": false,
                "outputFormat": "[${currTime}] - ${currTimeMillis} - ${invoke}: ${costTime}ms",
                "timeFormat": "yyyy-MM-dd HH:mm:ss.SSS",
                "maxBufferSize": 8192
              }
            }
          }
        ],
        "targets": [
          {
            "includeClasses": [
              ".*\\.TestObject"
            ]
          },
          {
            "includeClasses": [
              ".*\\.SubTestObject"
            ],
            "methodFilter": {
              "includes": [
                ".*[l|L]oad"
              ]
            }
          },
          {
            "targetClasses": [
              "org.apache.commons.lang3.StringUtils"
            ],
            "methodFilter": {
              "includes": [
                "trim"
              ]
            }
          }
        ]
      }
    ]
  }
]
